---
import { config } from '../_config';

import { Splash } from '../components/splash';

import Profile from '../components/profile/profile.astro';

import Work from '../components/work/work.astro';
import Oss from '../components/oss/oss.astro';
import Projects from '../components/projects/projects.astro';

import '../css/global.scss';
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='robots' content='follow, index' />
    <meta http-equiv='Content-Type' content='text/html; charset=utf-8' />
    <meta name='robots' content='index' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <meta name='generator' content={Astro.generator} />
    <meta name='viewport' content='width=device-width' />
    <meta name='keywords' content={config.seo.keywords} />

    <title>{config.name} &mdash; {config.occupation}</title>
    <meta name='description' content={config.seo.description} />

    <meta property='og:type' content={config.seo.site_type} />
    <meta
      property='og:title'
      content={config.name + ' — ' + config.occupation}
    />
    <meta
      property='og:site_name'
      content={config.name + ' — ' + config.occupation}
    />
    <meta property='og:image' content='/favicons/favicon.ico' />
    <meta property='og:url' content={config.seo.site_url} />

    {
      config.twitter && (
        <meta name='twitter:site' content={`@${config.twitter}`} />
      )
    }
    <meta name='twitter:card' content='summary_large_image' />
    <meta
      name='twitter:title'
      content={config.name + ' — ' + config.occupation}
    />
    <meta
      name='twitter:image:alt'
      content="Decorative image that shows the person's picture, name, and occupation."
    />
    {
      config.seo.twitter_card_image && (
        <meta
          name='twitter:image'
          content={config.seo.site_url.concat(config.seo.twitter_card_image)}
        />
      )
    }
    <meta
      name='twitter:description'
      content={config.seo.twitter_card_description ?? config.seo.description}
    />

    <link rel='canonical' href={config.seo.site_url} />

    <link
      rel='apple-touch-icon'
      sizes='180x180'
      type='image/svg+xml'
      href='/favicons/android-chrome-180x180.png'
    />
    <link
      rel='icon'
      sizes='192x192'
      type='image/svg+xml'
      href='/favicons/android-chrome-192x192.png'
    />
    <link
      rel='icon'
      sizes='32x32'
      type='image/svg+xml'
      href='/favicons/favicon-32x32.png'
    />
    <link
      rel='icon'
      sizes='16x16'
      type='image/svg+xml'
      href='/favicons/favicon-16x16.png'
    />
  </head>

  <body class='bg-slate-900 leading-relaxed text-slate-400 antialiased'>
    <!-- Initial splash animation on page load -->
    <Splash client:load />

    <!-- Content container -->
    <main
      class='xl:flex xl:flex-row xl:gap-4 sm:justify-items-center px-6 py-6 justify-center mx-auto md:px-12 md:py-20 xl:px-24 xl:py-0'
    >
      <!-- Profile -->
      <section
        class='xl:min-w-[400px] xl:sticky xl:top-0 xl:flex xl:flex-col xl:justify-between xl:self-start'
      >
        <Profile />
      </section>

      <!-- Experience, Contributions, and Projects -->
      <section
        class='max-w-[667px] flex flex-col flex-wrap content-center gap-20 py-12'
      >
        <!-- Work -->
        <section
          class='w-full mx-auto flex flex-col flex-wrap justify-center content-center'
        >
          <Work />
        </section>

        <!-- Open source contributions -->
        <section
          class='w-full mx-auto flex flex-col flex-wrap justify-center content-center'
        >
          <Oss />
        </section>

        <!-- Projects -->
        <section
          class='w-full mx-auto flex flex-col flex-wrap justify-center content-center'
        >
          <Projects />
        </section>
      </section>
    </main>
  </body>
</html>
