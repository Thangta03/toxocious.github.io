---
import { Image } from 'astro:assets';

import Link from '../link/link.astro';
import Navigation from '../navigation/navigation.astro';
import ThemeToggle from '../theme_toggle/theme_toggle.astro';

import Favicon from '../../assets/favicon.ico';
---

<header
    transition:persist
    class="w-full backdrop-blur-md flex flex-row justify-between items-center gap-2 px-4 py-4 sm:mx-auto lg:sticky lg:top-0 lg:px-0"
>
    <div
        class="max-w-4xl w-full mx-auto flex flex-row justify-between items-center gap-2"
    >
        <section class="hidden sm:block">
            <Link href="/">
                <Image
                    src={Favicon}
                    title="Logo depicting my initials"
                    alt="Logo depicting my initials"
                    class="rounded-lg transition-all ease-in-out duration-200 hover:p-1 invert dark:invert-0"
                    height="40"
                    width="40"
                />
            </Link>
        </section>

        <section>
            <Navigation />
        </section>

        <section class="hidden sm:block">
            <ThemeToggle />
        </section>
    </div>
</header>
