---
import { config } from '../../_config';

import Social from '../social/social.astro';
---

<div
  class='relative self-start flex flex-row flex-wrap gap-5 justify-center content-center backdrop-blur-[2px] p-4'
>
  <div
    class='w-[200px] h-[300px] text-5xl font-bold rounded-lg flex items-center justify-center bg-gray2 border border-gray-700 relative overflow-hidden shadow-md'
  >
    <img
      class='h-auto max-w-full'
      src='/me.jpg'
      alt='The creator of the website'
    />
  </div>

  <div class='flex flex-col'>
    <font class='custom-header mb-3 text-4xl font-bold text-slate-200'>
      {config.name}
    </font>

    <font
      class='custom-header mb-3 text-2xl leading-6 not-italic font-thin text-slate-300'
    >
      {config.occupation}
    </font>

    <font class='max-w-md grow'>
      {config.summary}
    </font>

    <Social />
  </div>
</div>
