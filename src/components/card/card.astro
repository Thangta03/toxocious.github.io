---
import Badge from '../badge/badge.astro';

import Github from '../../svg/github.astro';
import Globe from '../../svg/globe.astro';

const { image, title, description } = Astro.props;
---

<article
  class='bg-slate-700 text-slate-100 p-4 shadow-lg rounded-lg flex flex-col gap-4 hover:bg-slate-600 hover:ease-in-out duration-200'
>
  <section class='flex flex-row gap-4'>
    <img
      src={image}
      class='block object-cover bg-no-repeat bg-center rounded-lg h-16 w-16'
    />

    <div class='flex flex-col self-center'>
      <b class='truncate'>{title}</b>
      <i>Oct 21, 2020 - Dec 12, 2023</i>
    </div>
  </section>

  <section class='flex flex-row flex-wrap gap-2'>
    {new Array(4).fill('').map((_) => <Badge Tag='bepis' />)}
  </section>

  <section class='rounded-lg'>{description}</section>

  <section class='flex flex-row flex-wrap gap-2 justify-end'>
    <a
      href={'https://google.com'}
      class='bg-rose-300 text-rose-900 rounded-lg px-4 py-2 flex flex-row flex-wrap items-center gap-2 hover:bg-rose-400 hover:ease-in-out duration-200'
    >
      <Globe fill={700} />
      Website
    </a>

    <a
      href={'https://github.com'}
      class='bg-rose-300 text-rose-900 rounded-lg px-4 py-2 flex flex-row flex-wrap items-center gap-2 hover:bg-rose-400 hover:ease-in-out duration-200'
    >
      <Github fill={400} />
      Source
    </a>
  </section>
</article>
