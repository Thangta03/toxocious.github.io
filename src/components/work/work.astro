---
import { getCollection } from 'astro:content';

const workEntries = await getCollection('work');

import Card from '../card/card.astro';
---

<section class='flex flex-col flex-wrap gap-5 backdrop-blur-[2px] p-4'>
  <font class='custom-header text-3xl font-bold text-slate-200'>
    &mdash; Work Experience
  </font>
</section>

<section
  class='flex flex-row flex-wrap gap-10 justify-center content-center p-4'
>
  {
    workEntries
      .sort((a, b) => a.data.order - b.data.order)
      .map((workEntry) => (
        <Card
          title={workEntry.data.title}
          tags={workEntry.data.tags}
          image={workEntry.data.image}
          repository={workEntry.data.repository}
          website={workEntry.data.website}
        >
          {workEntry.body}
        </Card>
      ))
  }
</section>
